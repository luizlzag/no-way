{%- liquid
  assign blocks = section.blocks
-%}

<style>

   #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .benefits-grid-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    gap: 40px;
  }

  .benefit-item-{{ section.id }} {
    display: flex;
    width: 176px;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    align-self: stretch;
    gap: 20px;
  }

  .benefit-icon-{{ section.id }} {
    width: 100px;
    height: 100px;
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .benefit-icon-{{ section.id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ section.settings.color_text}};
  }

  .benefit-title-{{ section.id }} {
    color: {{section.settings.color_text}};
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 30px */
    margin: 0;
  }

  .benefit-description-{{ section.id }} {
    display: none; /* Ocultar descrição conforme o design */
  }


  @media (max-width: 768px) {
    .benefits-grid-{{ section.id }} {
      flex-wrap: wrap;
      justify-content: center;
      gap: 30px;
    }
    
    .benefit-item-{{ section.id }} {
      width: 150px;
    }
    
    .benefit-icon-{{ section.id }} {
      width: 80px;
      height: 80px;
    }
    
    .benefit-title-{{ section.id }} {
      font-size: 18px;
    }
  }

  @media (max-width: 480px) {
    .benefits-grid-{{ section.id }} {
      flex-direction: column;
      align-items: center;
    }
    
    .benefit-item-{{ section.id }} {
      width: 200px;
    }
  }
</style>

<div class="page-width">

    {%- if blocks.size > 0 -%}
      <div class="benefits-grid-{{ section.id }}">
        {%- for block in blocks -%}
          <div class="benefit-item-{{ section.id }}" {{ block.shopify_attributes }}>
            {%- if block.settings.svg_icon != blank -%}
              <div class="benefit-icon-{{ section.id }}">
                {{ block.settings.svg_icon }}
              </div>
            {%- endif -%}
            
            {%- if block.settings.title != blank -%}
              <h3 class="benefit-title-{{ section.id }}">{{ block.settings.title }}</h3>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

</div>





{% schema %}
    {
        "name": "Benefits Section",
        "tag": "section",
        "class": "benefits-section",
        "settings": [
            {
                "type": "color",
                "id": "color_text",
                "label": "Cor do Texto",
                "default": "#452166"
            },
            {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding top",
            "default": 36
            },
            {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 36
            }
        ],
        "blocks": [
            {
                "type": "benefit",
                "name": "Benefício",
                "settings": [
                    {
                        "type": "textarea",
                        "id": "svg_icon",
                        "label": "Ícone (SVG)",
                        "info": "Cole aqui o código SVG do ícone"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Título",
                        "default": "Benefício"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Benefits Section",
            }
        ]
    }
{% endschema %}
