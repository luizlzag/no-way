        "id": "composicao",
        "label": "Texto de composição"
      },
      {
        "type": "richtext",
        "id": "cuidados",
        "label": "Advertências"
      },
      {
        "type": "color",
        "id": "color_background_tab_select",
        "label": "Cor de fundo do tab selecionado",
        "default": "#8C20D5"
      },
      {
        "type": "color",
        "id": "color_text_tab_select",
        "label": "Cor do texto do tab selecionado",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_background_tab_unselect",
        "label": "Cor de fundo do tab não selecionado",
        "default": "#F4E8FF"
      },
      {
        "type": "color",
        "id": "color_text_tab_unselect",
        "label": "Cor do texto do tab não selecionado",
        "default": "#9F30ED"
      },
      {
        "type": "color",
        "id": "color_border_section",
        "label": "Cor da borda da seção",
        "default": "#8C20D5"
      },
      {
        "type": "color",
        "id": "color_background_section",
        "label": "Cor de fundo da seção",
        "default": "#FBF5FF"
      },
      {
        "type": "color",
        "id": "color_text_section",
        "label": "Cor do texto da seção",
        "default": "#68686E"
      }
    ],
    "presets": [
      {
        "name": "Infos Product"
      }
    ]
  }
  {% endschema %}