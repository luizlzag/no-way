            },
            {
                "type": "number",
                 "id":"padding_space_mobile",
                 "label": "Padding Space Mobile",
                 "default": 30
            },
      {
        "type": "richtext",
        "id": "modo_uso_text",
        "label": "Texto de modo de uso"
