{%- liquid
  assign blocks = section.blocks
-%}

<style>
  .benefits-section {
    padding: 60px 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .benefits-container {
    display: flex;
    width: 1040px;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }

  .benefits-grid {
    display: flex;
    align-items: flex-start;
    width: 100%;
    gap: 40px;
  }

  .benefit-item {
    display: flex;
    width: 176px;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    align-self: stretch;
    gap: 20px;
  }

  .benefit-icon {
    width: 100px;
    height: 100px;
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .benefit-icon svg {
    width: 100%;
    height: 100%;
    fill: {{ section.settings.color_text | default: '#452166' }};
  }

  .benefit-title {
    color: var(--Purple-500, #452166);
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 30px */
    margin: 0;
  }

  .benefit-description {
    display: none; /* Ocultar descrição conforme o design */
  }

  /* Responsivo */
  @media (max-width: 1080px) {
    .benefits-container {
      width: 90%;
      max-width: 1040px;
    }
  }

  @media (max-width: 768px) {
    .benefits-grid {
      flex-wrap: wrap;
      justify-content: center;
      gap: 30px;
    }
    
    .benefit-item {
      width: 150px;
    }
    
    .benefit-icon {
      width: 80px;
      height: 80px;
    }
    
    .benefit-title {
      font-size: 18px;
    }
  }

  @media (max-width: 480px) {
    .benefits-grid {
      flex-direction: column;
      align-items: center;
    }
    
    .benefit-item {
      width: 200px;
    }
  }
</style>

<div class="page-width">

    {%- if blocks.size > 0 -%}
      <div class="benefits-grid">
        {%- for block in blocks -%}
          <div class="benefit-item" {{ block.shopify_attributes }}>
            {%- if block.settings.svg_icon != blank -%}
              <div class="benefit-icon">
                {{ block.settings.svg_icon }}
              </div>
            {%- endif -%}
            
            {%- if block.settings.title != blank -%}
              <h3 class="benefit-title">{{ block.settings.title }}</h3>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

</div>





{% schema %}
    {
        "name": "Benefits Section",
        "tag": "section",
        "class": "benefits-section",
        "settings": [
            {
                "type": "color",
                "id": "color_text",
                "label": "Cor do Texto",
                "default": "#452166"
            }
        ],
        "blocks": [
            {
                "type": "benefit",
                "name": "Benefício",
                "settings": [
                    {
                        "type": "textarea",
                        "id": "svg_icon",
                        "label": "Ícone (SVG)",
                        "info": "Cole aqui o código SVG do ícone"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Título",
                        "default": "Benefício"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Benefits Section",
            }
        ]
    }
{% endschema %}
