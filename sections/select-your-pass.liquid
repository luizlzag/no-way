
{%- liquid
  assign blocks = section.blocks
-%}

<style>
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .select-your-pass-section-{{ section.id }} {
    width: 100%;
    box-sizing: border-box;
  }
  .select-your-pass-title-{{ section.id }} {
    color: var(--gray-700, #565557);
    text-align: center;
    leading-trim: both;
    text-edge: cap;
    font-size: 40px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    margin-bottom: 40px;
  }
  .select-your-pass-list-{{ section.id }} {
    display: flex;
    justify-content: center;
    gap: 32px;
    width: 100%;
  }
  .select-your-pass-item-{{ section.id }} {
    width: 263px;
    height: 109px;
    aspect-ratio: 263/109;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
  }
  .select-your-pass-img-{{ section.id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }
</style>

<section class="page-width select-your-pass-section-{{ section.id }}">
  <h2 class="select-your-pass-title-{{ section.id }}">
    {{ section.settings.title }}
  </h2>
  <div class="select-your-pass-list-{{ section.id }}">
    {% for block in section.blocks %}
      <button type="button" class="select-your-pass-item-{{ section.id }}">
        <div class="select-your-pass-image-{{ section.id }}">
          {% if block.settings.image %}
              {% assign img_url = block.settings.image | image_url: width: 263, height: 109 %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" rel="noopener">
                  <img src="{{ img_url }}" width="263" height="109" alt="{{ block.settings.label }}" loading="lazy" class="select-your-pass-img-{{ section.id }}" />
                </a>
              {% else %}
                <img src="{{ img_url }}" width="263" height="109" alt="{{ block.settings.label }}" loading="lazy" class="select-your-pass-img-{{ section.id }}" />
              {% endif %}
          {% else %}
            <div style="width: 100%; height: 100%; background: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #999;">
              Imagem não selecionada
            </div>
          {% endif %}
        </div>
      </button>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Seleção de Passe",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Selecione seu passe"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "pass",
      "name": "Passe",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem do Passe"
        },
        {
          "type": "text",
          "id": "link",
          "label": "Link do Passe"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Seleção de Passe"
    }
  ]
}
{% endschema %}
