<a
  href="https://wa.me/{{ settings.number_contato }}?text={{ settings.mensagem_padrao | url_encode }}"
  target="_blank"
  rel="noopener noreferrer"
  class="wpp-button"
>
  <div class="wpp-button">
    {{ settings.codigo_svg }}
  </div>
</a>

{% if template.name == 'product' %}
  <style>
    @media (max-width: 768px) {
     .sticky-active .wpp-button {
          bottom: 16% !important;
      }
    }
  </style>
{% endif %}
<style>
  .wpp-button {
    position: fixed;
    bottom: 5%;
    {% if settings.lado_botao == 'left' %}
      left: 5%;
    {% else %}
      right: 5%;
    {% endif %}
    z-index: {{ settings.z_index }};
    transition: all 1.5s;
  }

  .wpp-button svg {
    width: {{ settings.tamanho_icone }}px;
    height: {{ settings.tamanho_icone }}px;
  }

  @media (max-width: 768px) {
    .wpp-button svg {
      width: 50px;
      height: 50px;
    }
    .wpp-button{
       bottom: 5%;
    }
  }
</style>
